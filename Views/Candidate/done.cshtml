<section class="ftco-section-parallax">
    <div class="parallax-img d-flex align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                    <h2>Thanks for submiting your information</h2>
                    <p>An Email has been sent to you!</p>
                    <div class="row d-flex justify-content-center mt-4 mb-4">
                        <div class="col-md-8">
                            <p>you will redirect to your home page after</p><p id="sec">5</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    var time = document.getElementById('sec');
    var sleep = async function (seconds) {
        return new Promise((resolve) => setTimeout(resolve, seconds * 1000));
    }
    window.onload = async (event) => {
        for (var i = 0; i < 5; i++) {
            await sleep(1);
            time.textContent = 5 - i;
            if (5 - i === 1) {
                window.location.href="/Home";
            }
        }
    };
</script>